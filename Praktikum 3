  
#include <iostream>
using namespace std;

    int main ()
    {
        int umur;
        char nama [10];
        
        cout << " masukkan nama anda : ";
        cin >> nama ;
        cout << " masukkan umur anda : ";
        cin >> umur ;
        cout << "Nama : " << nama <<endl;
        cout << "Umur : " << umur << " tahun" <<endl;
        
        
        if (umur >= 17 ){
            cout << " selamat " << nama << " telah diterima di universitas paramadina ";
        
        }
        else
        {
            cout<<" maaf " << nama << " belum diterima di universitas paramadina ";
        }
            
        return 0;
        
    }
